root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4
ij_any_wrap_comments = true
ij_any_wrap_long_lines = true

[*.ts]
quote_type = single

[Makefile]
indent_size = 8
indent_style = tab